<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.DriverDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="377dp"
        android:layout_height="628dp"
        android:background="@drawable/layout_bg"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="383dp"
            android:layout_height="212dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout4"
                android:layout_width="189dp"
                android:layout_height="109dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/driver_name_text_view">

                <TextView
                    android:id="@+id/textView_driver_number_podiums"
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginBottom="1dp"
                    android:text="15"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/textView4"
                    app:layout_constraintEnd_toStartOf="@+id/textView_driver_number_poles"
                    app:layout_constraintStart_toEndOf="@+id/textView_driver_number_wins" />

                <TextView
                    android:id="@+id/textView_driver_number_poles"
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="1dp"
                    android:text="15"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/textView5"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="28dp"
                    android:text="Wins"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="28dp"
                    android:text="Podiums"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="46dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="29dp"
                    android:text="Poles"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/textView_driver_number_wins"
                    android:layout_width="30dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="16dp"
                    android:text="15"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/driver_photo_image_view"
                android:layout_width="144dp"
                android:layout_height="171dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/motorcyclist" />

            <TextView
                android:id="@+id/driver_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                android:padding="16dp"
                android:text="Driver Name"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/driver_photo_image_view"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="383dp"
            android:layout_height="358dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="347dp"
                android:layout_height="62dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Entry:"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="35dp"
                    tools:layout_editor_absoluteY="21dp" />

                <TextView
                    android:id="@+id/textView_driver_first_enty"
                    android:layout_width="191dp"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:text="2015 Australian Grand Prix"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="140dp"
                    tools:layout_editor_absoluteY="22dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="341dp"
                android:layout_height="49dp"
                tools:layout_editor_absoluteX="21dp"
                tools:layout_editor_absoluteY="85dp">

                <TextView
                    android:id="@+id/extView_driver_first_win"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2016 Spanish Grand Prix"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="142dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="First Win:"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="16dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="344dp"
                android:layout_height="65dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="144dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="World Championships:"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="24dp"
                    tools:layout_editor_absoluteY="24dp" />

                <TextView
                    android:id="@+id/textView_number_of_titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="268dp"
                    tools:layout_editor_absoluteY="25dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="352dp"
                android:layout_height="67dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="208dp">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Country:"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="64dp"
                    tools:layout_editor_absoluteY="25dp" />

                <TextView
                    android:id="@+id/textView_counry_born"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Netherlands"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="197dp"
                    tools:layout_editor_absoluteY="31dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="73dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="282dp">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="98dp"
                    android:layout_height="18dp"
                    android:text="Date of birth:"
                    android:textColor="#EC0E0E"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="34dp" />

                <TextView
                    android:id="@+id/textView_driver_date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30.09.1997"
                    android:textColor="@color/black"
                    tools:layout_editor_absoluteX="164dp"
                    tools:layout_editor_absoluteY="33dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>